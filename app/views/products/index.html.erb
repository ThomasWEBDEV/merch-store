<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Nos Produits</h1>
  <div>
    <% if user_signed_in? %>
      <%= link_to "Mon Panier", cart_items_path, class: "btn btn-primary" %>
      <%= link_to "Ajouter un produit", new_product_path, class: "btn btn-success" %>
    <% end %>
  </div>
</div>

<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title"><%= product.name %></h5>
          <p class="card-text text-muted"><%= product.description %></p>
          <div class="d-flex justify-content-between align-items-center">
            <span class="h5 mb-0"><%= number_to_currency(product.price, unit: "â‚¬") %></span>
            <span class="badge bg-secondary">Stock: <%= product.stock %></span>
          </div>
          <div class="mt-3">
            <%= link_to "Voir", product, class: "btn btn-outline-primary btn-sm" %>
            <% if user_signed_in? && product.stock > 0 %>
              <%= button_to "Ajouter au panier", product_cart_items_path(product),
                  method: :post,
                  class: "btn btn-success btn-sm" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @products.empty? %>
  <div class="alert alert-info text-center">
    <h4>Aucun produit disponible</h4>
    <% if user_signed_in? %>
      <p>Commencez par <%= link_to "ajouter un produit", new_product_path %>!</p>
    <% end %>
  </div>
<% end %>
