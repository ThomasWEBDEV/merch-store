<h1>🛒 Mon Panier</h1>

<% if @cart_items.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>Produit</th>
        <th>Prix</th>
        <th>Quantité</th>
        <th>Total</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |item| %>
        <tr>
          <td><%= item.product.name %></td>
          <td><%= number_to_currency(item.product.price, unit: "€") %></td>
          <td>
            <%= form_with model: item, url: cart_item_path(item), method: :patch do |f| %>
              <%= f.number_field :quantity, value: item.quantity, min: 1, class: "form-control", style: "width: 80px", onchange: "this.form.submit()" %>
            <% end %>
          </td>
          <td><%= number_to_currency(item.quantity * item.product.price, unit: "€") %></td>
          <td>
            <%= button_to "❌", cart_item_path(item), method: :delete, class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="3">Total</th>
        <th><%= number_to_currency(@total, unit: "€") %></th>
        <th></th>
      </tr>
    </tfoot>
  </table>

  <div class="mt-3">
    <%= link_to "Continuer les achats", products_path, class: "btn btn-secondary" %>
    <button class="btn btn-success" onclick="alert('✅ Commande simulée ! Dans une vraie app, on irait vers le paiement.'); return false;">
      Commander (simulation)
    </button>
  </div>
<% else %>
  <div class="alert alert-info">
    <h4>Votre panier est vide</h4>
    <%= link_to "Voir les produits", products_path, class: "btn btn-primary" %>
  </div>
<% end %>
